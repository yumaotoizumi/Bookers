<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title,class: "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body,class: "book_body" %>
    <p><%= f.submit 'Update Book' %></p>

    <%= link_to "Show", post_path(@post.id),class: "show#{@post.id}" %>

    <%= link_to "Back", posts_path,class: "back" %>

<% end %>